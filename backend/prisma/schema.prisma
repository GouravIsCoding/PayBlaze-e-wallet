generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id     Int     @id @default(autoincrement())
  email String @unique
  firstname String
  lastname String
  password String
  account Account?

}

model Account{
  id     Int     @id @default(autoincrement())
  balance Int @default(0)
  user User @relation(fields: [userId],references: [id])
  userId Int @unique
  toTransactions Transaction[] @relation("toUser")
  fromTransactions Transaction[] @relation("fromUser")
}

model Transaction {
  id     Int     @id @default(autoincrement())
  amount Int
  type TransactionType
  toUser Account @relation(name: "toUser",fields: [toUserId],references: [id])
  fromUser Account? @relation(name:"fromUser",fields: [fromUserId],references: [id])
  toUserId Int 
  fromUserId Int?
  timeStamp DateTime    @default(now())
}

enum TransactionType {
  DEPOSIT
  TRANSFER
}